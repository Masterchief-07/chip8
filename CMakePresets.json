{
    "version": 10,
    "configurePresets": [
        {
            "name": "ninja-debug",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/debug",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/build/install/${presetName}",
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "/usr/bin/gcc",
                "CMAKE_CXX_COMPILER": "/usr/bin/g++",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "chip8Tui-debug",
            "inherits": "ninja-debug",
            "cacheVariables": {
                "BUILD_TUI": {
                    "value": "ON",
                    "type": "BOOL"
                }
            }
        },
        {
            "name": "chip8Gui-debug",
            "inherits": "ninja-debug",
            "cacheVariables": {
                "BUILD_GUI": {
                    "value": "ON",
                    "type": "BOOL"
                }
            }
        }
    ],
    "buildPresets": [
        {
            "name": "ninja-build-debug",
            "displayName": "Ninja Build with Debug",
            "configurePreset": "ninja-debug"
        }
    ],
    "testPresets": [
        {
            "name": "ninja-test-debug",
            "displayName": "Ninja Test with Debug",
            "configurePreset": "ninja-debug",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        }
    ]
}